{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "lib": [
            "es2015",
            "dom"
        ],
        "outDir": "build/",
        "noImplicitAny": true,
        "suppressImplicitAnyIndexErrors": true,
        "alwaysStrict": true,
        "forceConsistentCasingInFileNames": true,
        "noImplicitReturns": true
    },
    "exclude": [
        "node_modules"
    ]
}